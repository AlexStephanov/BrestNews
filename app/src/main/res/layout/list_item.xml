<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_8dp"
    android:layout_marginTop="@dimen/spacing_4dp"
    android:layout_marginEnd="@dimen/spacing_8dp"
    android:layout_marginBottom="@dimen/spacing_4dp"
    android:minHeight="@dimen/item_min_height"
    android:background="@drawable/border_shadow"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_list_item_thumbnail"
        android:layout_width="@dimen/thumbnail_size"
        android:layout_height="@dimen/thumbnail_size"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="@dimen/spacing_4dp"
        android:visibility="visible"
        android:layout_gravity="center"
        android:contentDescription="@string/logo" />

    <RelativeLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_list_item_title"
                style="@style/Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8dp"
                android:layout_marginStart="@dimen/spacing_8dp"
                android:layout_marginEnd="@dimen/spacing_8dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/text_view_list_item_description"
                style="@style/Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_8dp"
                android:layout_marginTop="@dimen/spacing_4dp"
                android:layout_marginEnd="@dimen/spacing_8dp"
                android:layout_marginBottom="@dimen/spacing_8dp"
                android:maxLines="4"
                android:ellipsize="end"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_list_item_publication_date"
                style="@style/InfoDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/spacing_16dp"
                android:layout_marginBottom="@dimen/spacing_8dp"
                android:text="4 минуты назад" />

            <TextView
                android:id="@+id/text_view_list_item_source"
                style="@style/InfoSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/spacing_16dp"
                android:layout_marginBottom="@dimen/spacing_8dp"
                android:text="onlinebrest.by"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>